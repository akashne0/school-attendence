<div class="card shadow">
  <div class="card-header">
    <h4>
      Course
    </h4>
  </div>
  <div class="card-body">

    <b>User:</b>
    <%= link_to @course.user, @course.user %>
    <br>

    <b>Classroom:</b>
    <%= link_to @course.classroom, @course.classroom %>
    <br>

    <b>Service:</b>
    <%= link_to @course.service, @course.service %>
    <br

    <b>Start Time:</b>
    <%= @course.start_time&.strftime("%H:%M") %>
    <br>

    <b>Days:</b>
    <%= @course.days %>
    <br>

  </div>
  <div class="card-footer">
    <%= link_to 'Edit', edit_course_path(@course), class: 'btn btn-sm btn-warning' %>
    <%= link_to 'Destroy', @course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
  </div>
</div>
<br>
<div class="card shadow">
  <div class="card-header">
    <h4>
      Enrollments
    </h4>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover table-sm table-light shadow">
        <thead>
          <tr>
            <th>Id</th>
            <th>User</th>
          </tr>
        </thead>
        <tbody>
          <% @enrollments.each do |enrollment| %>
            <%= content_tag :tr, id: dom_id(enrollment), class: dom_class(enrollment) do %>
                <td><%= enrollment.id %></td>
                <td><%= enrollment.user %></td>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>
<%= link_to 'New Lessons', new_course_lesson_path(@course), class: "btn btn-primary" %><p></p>
<%= render 'static_pages/calender' %>
